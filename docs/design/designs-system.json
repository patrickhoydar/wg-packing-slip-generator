{
  "designSystem": {
    "name": "Modern Dashboard Design System",
    "version": "1.0.0",
    "description": "A comprehensive design system for building modern web applications with clean, professional interfaces"
  },
  "colorPalette": {
    "primary": {
      "main": "#4F46E5",
      "light": "#818CF8",
      "dark": "#3730A3",
      "description": "Primary blue for buttons, links, and key actions"
    },
    "secondary": {
      "main": "#06B6D4",
      "light": "#67E8F9",
      "dark": "#0891B2"
    },
    "neutral": {
      "white": "#FFFFFF",
      "gray50": "#F9FAFB",
      "gray100": "#F3F4F6",
      "gray200": "#E5E7EB",
      "gray300": "#D1D5DB",
      "gray400": "#9CA3AF",
      "gray500": "#6B7280",
      "gray600": "#4B5563",
      "gray700": "#374151",
      "gray800": "#1F2937",
      "gray900": "#111827"
    },
    "status": {
      "success": "#10B981",
      "warning": "#F59E0B",
      "error": "#EF4444",
      "info": "#3B82F6"
    },
    "priority": {
      "high": "#EF4444",
      "medium": "#F59E0B",
      "low": "#6B7280"
    }
  },
  "typography": {
    "fontFamily": {
      "primary": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif",
      "mono": "'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace"
    },
    "fontSizes": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem"
    },
    "fontWeights": {
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700"
    },
    "lineHeights": {
      "tight": "1.25",
      "normal": "1.5",
      "relaxed": "1.75"
    }
  },
  "spacing": {
    "scale": "4px base unit",
    "values": {
      "0": "0",
      "1": "0.25rem",
      "2": "0.5rem",
      "3": "0.75rem",
      "4": "1rem",
      "5": "1.25rem",
      "6": "1.5rem",
      "8": "2rem",
      "10": "2.5rem",
      "12": "3rem",
      "16": "4rem",
      "20": "5rem",
      "24": "6rem"
    }
  },
  "borderRadius": {
    "none": "0",
    "sm": "0.125rem",
    "base": "0.25rem",
    "md": "0.375rem",
    "lg": "0.5rem",
    "xl": "0.75rem",
    "2xl": "1rem",
    "full": "9999px"
  },
  "shadows": {
    "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
    "base": "0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1)",
    "md": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)",
    "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)",
    "xl": "0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1)"
  },
  "layout": {
    "containers": {
      "maxWidth": "1280px",
      "padding": "1rem",
      "margin": "0 auto"
    },
    "grid": {
      "columns": 12,
      "gap": "1rem",
      "breakpoints": {
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px"
      }
    },
    "sidebar": {
      "width": "280px",
      "collapsedWidth": "64px",
      "background": "#FFFFFF",
      "border": "1px solid #E5E7EB"
    }
  },
  "components": {
    "buttons": {
      "primary": {
        "background": "#4F46E5",
        "color": "#FFFFFF",
        "padding": "0.5rem 1rem",
        "borderRadius": "0.375rem",
        "fontWeight": "500",
        "fontSize": "0.875rem",
        "border": "none",
        "cursor": "pointer",
        "hover": {
          "background": "#3730A3"
        }
      },
      "secondary": {
        "background": "#F3F4F6",
        "color": "#374151",
        "border": "1px solid #D1D5DB",
        "hover": {
          "background": "#E5E7EB"
        }
      },
      "ghost": {
        "background": "transparent",
        "color": "#6B7280",
        "border": "none",
        "hover": {
          "background": "#F3F4F6",
          "color": "#374151"
        }
      }
    },
    "cards": {
      "base": {
        "background": "#FFFFFF",
        "border": "1px solid #E5E7EB",
        "borderRadius": "0.5rem",
        "padding": "1.5rem",
        "boxShadow": "0 1px 3px 0 rgb(0 0 0 / 0.1)"
      },
      "elevated": {
        "boxShadow": "0 10px 15px -3px rgb(0 0 0 / 0.1)"
      }
    },
    "tables": {
      "container": {
        "background": "#FFFFFF",
        "border": "1px solid #E5E7EB",
        "borderRadius": "0.5rem",
        "overflow": "hidden"
      },
      "header": {
        "background": "#F9FAFB",
        "borderBottom": "1px solid #E5E7EB",
        "padding": "0.75rem 1rem",
        "fontWeight": "500",
        "fontSize": "0.875rem",
        "color": "#374151"
      },
      "cell": {
        "padding": "0.75rem 1rem",
        "borderBottom": "1px solid #F3F4F6",
        "fontSize": "0.875rem",
        "color": "#6B7280"
      },
      "hover": {
        "background": "#F9FAFB"
      }
    },
    "forms": {
      "input": {
        "background": "#FFFFFF",
        "border": "1px solid #D1D5DB",
        "borderRadius": "0.375rem",
        "padding": "0.5rem 0.75rem",
        "fontSize": "0.875rem",
        "focus": {
          "borderColor": "#4F46E5",
          "outline": "2px solid #4F46E5",
          "outlineOffset": "2px"
        }
      },
      "label": {
        "fontSize": "0.875rem",
        "fontWeight": "500",
        "color": "#374151",
        "marginBottom": "0.25rem"
      }
    },
    "navigation": {
      "topBar": {
        "height": "64px",
        "background": "#FFFFFF",
        "borderBottom": "1px solid #E5E7EB",
        "padding": "0 1rem",
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "space-between"
      },
      "sidebarItem": {
        "padding": "0.5rem 1rem",
        "borderRadius": "0.375rem",
        "margin": "0.125rem 0",
        "fontSize": "0.875rem",
        "color": "#6B7280",
        "hover": {
          "background": "#F3F4F6",
          "color": "#374151"
        },
        "active": {
          "background": "#EEF2FF",
          "color": "#4F46E5",
          "fontWeight": "500"
        }
      }
    },
    "badges": {
      "priority": {
        "high": {
          "background": "#FEE2E2",
          "color": "#DC2626",
          "padding": "0.125rem 0.5rem",
          "borderRadius": "9999px",
          "fontSize": "0.75rem",
          "fontWeight": "500"
        },
        "medium": {
          "background": "#FEF3C7",
          "color": "#D97706"
        },
        "low": {
          "background": "#F3F4F6",
          "color": "#6B7280"
        }
      },
      "status": {
        "success": {
          "background": "#D1FAE5",
          "color": "#065F46"
        },
        "pending": {
          "background": "#FEF3C7",
          "color": "#92400E"
        }
      }
    },
    "dataVisualization": {
      "charts": {
        "colorScheme": ["#4F46E5", "#06B6D4", "#10B981", "#F59E0B", "#EF4444"],
        "grid": {
          "color": "#F3F4F6",
          "strokeWidth": "1px"
        },
        "axes": {
          "color": "#6B7280",
          "fontSize": "0.75rem"
        }
      }
    }
  },
  "interactions": {
    "transitions": {
      "fast": "150ms ease-in-out",
      "normal": "300ms ease-in-out",
      "slow": "500ms ease-in-out"
    },
    "hover": {
      "scale": "1.02",
      "opacity": "0.8"
    },
    "focus": {
      "outline": "2px solid #4F46E5",
      "outlineOffset": "2px"
    }
  },
  "patterns": {
    "dragAndDrop": {
      "draggable": {
        "cursor": "grab",
        "userSelect": "none",
        "transition": "transform 150ms ease-in-out"
      },
      "dragging": {
        "cursor": "grabbing",
        "transform": "rotate(2deg)",
        "zIndex": "1000",
        "opacity": "0.8"
      },
      "dropZone": {
        "border": "2px dashed #D1D5DB",
        "borderRadius": "0.5rem",
        "padding": "2rem",
        "background": "#F9FAFB",
        "active": {
          "borderColor": "#4F46E5",
          "background": "#EEF2FF"
        }
      }
    },
    "layering": {
      "sidebar": "z-40",
      "header": "z-30",
      "overlay": "z-50",
      "modal": "z-60",
      "tooltip": "z-70"
    }
  },
  "responsiveDesign": {
    "approach": "mobile-first",
    "breakpoints": {
      "mobile": "max-width: 767px",
      "tablet": "768px - 1023px",
      "desktop": "min-width: 1024px"
    },
    "adaptations": {
      "mobile": {
        "sidebar": "hidden by default, overlay when open",
        "tables": "horizontal scroll",
        "spacing": "reduced padding and margins",
        "typography": "slightly smaller font sizes"
      },
      "tablet": {
        "sidebar": "collapsible",
        "grid": "adjusted column spans"
      }
    }
  },
  "accessibility": {
    "colorContrast": {
      "minimum": "4.5:1 for normal text",
      "large": "3:1 for large text"
    },
    "focusManagement": {
      "visible": "clear focus indicators",
      "logical": "tab order follows visual flow"
    },
    "semantics": {
      "landmarks": "proper ARIA landmarks",
      "headings": "hierarchical heading structure",
      "labels": "descriptive labels for all controls"
    }
  },
  "implementation": {
    "cssFramework": "Tailwind CSS compatible",
    "componentLibrary": "React/Vue/Angular ready",
    "designTokens": "Available as CSS custom properties and JSON",
    "tooling": {
      "figma": "Design system file available",
      "storybook": "Component documentation",
      "testing": "Visual regression testing setup"
    }
  }
}
